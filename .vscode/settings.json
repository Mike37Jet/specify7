{
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "typescript.tsdk": "./specifyweb/frontend/js_src/node_modules/typescript/lib",
  "eslint.experimental.useFlatConfig": true,
  "eslint.workingDirectories": [{ "pattern": "./specifyweb/frontend/js_src/" }],

  "jest.autoRun": {
    "onStartup": ["all-tests"]
  },
  "jest.jestCommandLine": "npm run unitTests --",
  "jest.rootPath": "./specifyweb/frontend/js_src/",

  "better-comments.multilineComments": true,
  "better-comments.tags": [
    {
      "tag": "FIXME",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "BUG",
      "color": "#15a32d",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    },
    {
      "tag": "FEATURE",
      "color": "#d47d2c",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": true,
      "italic": false
    }
  ],

  "sqltools.connections": [
    {
      "mysqlOptions": {
        "authProtocol": "default"
      },
      "previewLimit": 50,
      "server": "localhost",
      "port": 3306,
      "askForPassword": true,
      "driver": "MariaDB",
      "name": "Specify Container",
      "database": "specify",
      "username": "root"
    }
  ],
  "sqltools.format": { "linesBetweenQueries": 2 },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "python.analysis.typeCheckingMode": "off",
  "editor.formatOnSave": true
}
